use ('aggregations');
db.trips.aggregate([
  {
    $group: {
      _id: "$bikeid",
      avgTime: { $avg: { $subtract: ["$stopTime", "$startTime"] } },

    },
  },
  {
    $project: {
      _id: 0,
      bikeId: "$_id",
      duracaoMediaemMinutos: { $ceil: { $divide: ["$avgTime", 1000 * 60] } },
    },
  },
  {
    $sort: { duracaoMediaemMinutos: -1 },
  },
  {
    $limit: 5,
  },
  
]);
